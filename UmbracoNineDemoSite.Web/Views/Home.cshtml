@model UmbracoNineDemoSite.Core.Features.Home.HomeViewModel
@{
    Layout = "Master.cshtml";
}
@if (Model != null)
{
    @(await Component.InvokeAsync("Hero", new {
        heading = Model.Heading,
        preamble = Model.Preamble,
        backgroundImageUrl = Model.BackgroundImage,
        callToActionUrl = Model.CallToActionUrl,
        callToActionLabel = Model.CallToActionLabel
    }))

    @(await Html.PartialAsync("_BlogPosts"))
}