@model UmbracoNineDemoSite.Core.Features.Shared.Components.Navigation.TopNavigationViewModel
@if (Model != null)
{
    @foreach (var item in Model.Items.Where(x => x.IsVisible() && x.TemplateId != 0))
    {
        <a class="nav-link @(item.Id == Model.Selected ? "nav-link--active" : null)" href="@item.Url()">@item.Name</a>
    }
}