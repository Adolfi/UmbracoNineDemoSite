@using Smidge

@{
    var cssUrls = await SmidgeHelper.GenerateCssUrlsAsync("css-bundle");
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
@foreach (var cssUrl in cssUrls)
{
    <link rel="preload" href="@cssUrl" as="style">
}
@await SmidgeHelper.CssHereAsync("css-bundle")
@await SmidgeHelper.CssHereAsync()